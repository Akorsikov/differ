#!/usr/bin/env php
<?php

$autoloadPathGlobal = __DIR__ . '/../../../autoload.php';
$autoloadPathLocal = __DIR__ . '/../vendor/autoload.php';
if (file_exists($autoloadPathGlobal)) {
    require_once $autoloadPathGlobal;
} else {
    require_once $autoloadPathLocal;
}

use function Php\Project\Diff\genDiff;
use function Php\Project\Formatters\Stylish\stylish;

$doc = <<<DOC

Generate diff

Usage:
  gendiff (-h|--help)
  gendiff (-v|--version)
  gendiff [--format <frm>] (<firstFile> <secondFile>)

Options:
  -h --help                 Show this screen
  -v --version              Show version
  --format <frm>            Report format [default: stylish]
DOC;

$args = Docopt::handle($doc, array('version' => 'gendiff 0.1'));

$diff = genDiff($args['<firstFile>'], $args['<secondFile>']);
$formater = $args['--format'];

//$formatedDiff = $formater($diff); // такой вызов не сработал

// Add in switch other formate functions
switch ($formater) {
  case 'stylish': $formatedDiff = stylish($diff);
    break;
  //case '<formate function>': $formatedDiff = <formate function>($diff);
  //  break;
}

echo ($formatedDiff);
